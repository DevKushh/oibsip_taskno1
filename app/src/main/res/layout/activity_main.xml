<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4BA69D"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TitleBox"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="-200dp"
        android:layout_marginBottom="-50dp"
        android:fontFamily="@font/bilbo"
        android:paddingLeft="20sp"
        android:shadowColor="#000000"
        android:shadowDx="20"
        android:shadowDy="10"
        android:shadowRadius="30"
        android:text="Unit Converter"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/NumberBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NumberBox"
        android:layout_width="338dp"
        android:layout_height="53dp"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="-20dp"
        android:background="#367B75"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="Enter the Number :"
        android:textColorHint="#6D0E0C0C"
        android:inputType="number"
        android:paddingLeft="40sp"
        android:textColor="#000000"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ChoiceBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TitleBox" />

    <Spinner
        android:id="@+id/ChoiceBox"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="20dp"
        android:background="#367B75"
        android:dropDownSelector="@android:drawable/alert_dark_frame"
        android:fadeScrollbars="true"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="20sp"
        android:paddingBottom="10sp"
        android:scrollbars="vertical"
        android:spinnerMode="dropdown"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ResultBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NumberBox" />

    <Button
        android:id="@+id/ConvertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="@color/cardview_light_background"
        android:fontFamily="sans-serif-smallcaps"
        android:shadowColor="#A06767"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="10"
        android:text="Convert"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ResultBox" />

    <TextView
        android:id="@+id/ResultBox"
        style="b"
        android:layout_width="342dp"
        android:layout_height="89dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="-10dp"
        android:background="#367B75"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="Answer :"
        android:textColorHint="#6D0E0C0C"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ConvertBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ChoiceBox" />


</androidx.constraintlayout.widget.ConstraintLayout>